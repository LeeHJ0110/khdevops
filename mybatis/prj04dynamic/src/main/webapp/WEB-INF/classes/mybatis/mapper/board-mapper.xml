<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">

	<insert id="write">
		INSERT INTO BOARD(
			TITLE
			, CONTENT
		)VALUES(
			#{title}
			, #{content}
		)
	</insert>
	
	<select id="selectBoard" resultType="BoardVo">
		SELECT *
		FROM BOARD
		<where>
         <if test="searchType == 1 or searchType ==3 ">
            TITLE LIKE '%${x}%'
         </if>
         <if test="searchType == 2 or searchType ==3">
            OR CONTENT LIKE '%${y}%' 
         </if>
      </where>
		ORDER BY NO DESC
	</select>
	
	<select id="searchBoard" resultType="BoardVo">
		SELECT *
		FROM BOARD
		WHERE DEL_YN = 'N'
		AND ${str} LIKE '%${searchValue}%'
		ORDER BY NO DESC
	</select>
	
</mapper>
